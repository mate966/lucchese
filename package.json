{
	"name": "lucchese",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "nodemon server/server.js --watch src --watch server --ext js --ignore src/data/ --ignore src/templates/",
		"dev:vite": "vite",
		"livereload": "livereload ./public ./src --exts html,css,js,twig,json",
		"dev:full": "concurrently \"pnpm run dev\" \"pnpm run dev:vite\"",
		"build": "tsc && vite build && node build/build-twig.js",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"lint": "eslint src --ext .js,.ts",
		"lint:fix": "eslint src --ext .js,.ts --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@types/alpinejs": "^3.13.11",
		"@types/twig": "^1.12.17",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.0",
		"connect-livereload": "^0.6.1",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"fs-extra": "^11.3.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"nodemon": "^3.1.9",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"sass": "^1.89.2",
		"tailwindcss": "^3.4.17",
		"twig": "^1.17.1",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@alpinejs/csp": "^3.14.9",
		"alpinejs": "^3.14.9",
		"express": "^5.1.0",
		"http-proxy-middleware": "^3.0.5",
		"livereload": "^0.9.3",
		"swiper": "^11.2.10"
	},
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	}
}
