<picture{% if classes %} class="{{classes|join(' ')}}"{% endif %}>

    {# mobile #}
    {% if image.mobile is defined and image.mobile.src is defined %}
        <source media="(max-width: 1023px)" srcset="{{ image.mobile.src }}">
    {% endif %}

    {# desktop #}
    {% if image.desktop is defined and image.desktop.src is defined %}
        <source media="(min-width: 1023px)" srcset="{{ image.desktop.src }}">
    {% endif %}

    <img
        src="{{ image.desktop.src ?: image.desktop ?: image.src }}"
        loading="lazy"
        alt="{{ alt }}"
        class="tw-w-full tw-h-auto tw-object-cover"
    />
</picture>
