<div 
    class="s-share tw-relative group"
    x-data="{ isOpen: false }"
    @mouseenter="if(window.innerWidth >= 1024) isOpen = true"
    @mouseleave="if(window.innerWidth >= 1024) isOpen = false"
>
    <div class="s-share__container">
        <div class="s-share__content">
            {% include '../atoms/a_button.twig' with {
                icons: ['i_share'],
                text: "Share",
                onclick: 'isOpen = !isOpen',
                classes: [
                    'tw-flex',
                    'tw-items-center',
                    'tw-gap-2',
                    'tw-py-2',
                    'tw-h-12',
                    'tw-tracking-wide',
                    'tw-uppercase',
                    'tw-text-sm',
                    'tw-font-medium',
                ]
            } %}
        </div>

        <div 
            x-show="isOpen"
            x-transition
            @click.away="isOpen = false"
            class="tw-absolute tw-top-full tw-right-0 tw-bg-white tw-border tw-border-gray-200 tw-shadow-lg tw-z-50 tw-px-1 tw-py-2 tw-space-y-2 tw-min-w-[120px]"
        >
            {% include '../atoms/a_button.twig' with {
                text: "Email",
                icons: ['i_envelope'],
                classes: [
                    'tw-flex',
                    'tw-justify-end',
                    'tw-gap-2',
                    'tw-items-center',
                    'tw-flex-row-reverse',
                    'tw-w-full',
                    'tw-text-left',
                    'tw-px-3',
                    'tw-py-2',
                    'tw-text-sm',
                    'tw-hover:tw-bg-gray-50',
                    'tw-border-0'
                ]
            } %}
            {% include '../atoms/a_button.twig' with {
                text: "SMS",
                icons: ['i_phone'],
                classes: [
                    'tw-flex',
                    'tw-justify-end',
                    'tw-gap-2',
                    'tw-items-center',
                    'tw-flex-row-reverse',
                    'tw-w-full',
                    'tw-text-left',
                    'tw-px-3',
                    'tw-py-2',
                    'tw-text-sm',
                    'tw-hover:tw-bg-gray-50',
                    'tw-border-0',
                ]
            } %}
        </div>
    </div>
</div>